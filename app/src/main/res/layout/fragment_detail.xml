<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <LinearLayout
        android:id="@+id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_horizontal"
            android:text="Hanoi"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@id/tv_city"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_20sdp"
            android:text="Sat, Aug 29th 2021" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upcoming Days"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:id="@+id/rv_forecast_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_120sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white_grey">
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/purple_white"
                            android:text="Humidity"></TextView>

                        <TextView
                            android:id="@+id/tv_humidity_degree"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_20sdp"
                            android:text="34 %"></TextView>
                        <TextView
                            android:id="@+id/tv_humidity_status"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@color/purple_bold"
                            android:textSize="@dimen/_12sdp"
                            android:text="Less humid than yesterday"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_120sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white_grey">
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/purple_white"
                            android:text="Wind"></TextView>

                        <TextView
                            android:id="@+id/tv_wind_degree"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_20sdp"
                            android:text="2 km/h"></TextView>
                        <TextView
                            android:id="@+id/tv_wind_status"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@color/purple_bold"
                            android:textSize="@dimen/_12sdp"
                            android:text="More windy than yesterday"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_120sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/white_grey">
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/purple_white"
                            android:text="Pressure"></TextView>

                        <TextView
                            android:id="@+id/tv_pressure_degree"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_20sdp"
                            android:text="10 atm"></TextView>
                        <TextView
                            android:id="@+id/tv_pressure_status"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_bold"
                            android:textColor="@color/purple_bold"
                            android:textSize="@dimen/_12sdp"
                            android:text="More pressure"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white_grey"
                android:layout_height="@dimen/_100sdp">
                <RelativeLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/_15ssp"
                        android:text="Air Quality"></TextView>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/tv_aqi"
                        android:layout_below="@id/tv_air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15ssp"
                        android:text="AQI 80"></TextView>

                    <TextView
                        android:id="@+id/tv_status_rate"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_toRightOf="@id/tv_aqi"
                        android:layout_below="@id/tv_air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/holo_orange_light"
                        android:textSize="@dimen/_15ssp"
                        android:text="Moderate"></TextView>

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/tv_status_aqi"
                        android:layout_below="@id/tv_status_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12ssp"
                        android:text="Close your windows to avoid dirty outdoor air"></TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>