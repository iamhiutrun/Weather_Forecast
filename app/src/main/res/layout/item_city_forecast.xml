<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:background="@drawable/stroke"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_height="@dimen/_130sdp">
    <RelativeLayout
        android:layout_margin="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_weather"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_cloud"></ImageView>
        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#081139"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_20ssp"
            android:text="28Â°"></TextView>

        <TextView
            android:layout_marginTop="@dimen/_30sdp"
            android:id="@+id/tv_city"
            android:layout_below="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#081139"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_15ssp"
            android:text="Hanoi"></TextView>
        <TextView
            android:id="@+id/tv_country"
            android:layout_below="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_grey"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_12ssp"
            android:text="Vietnam"></TextView>
    </RelativeLayout>
</LinearLayout>