<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_white"
    tools:context=".fragment.GeneralFragment">


    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_bold"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:text="Good Morning"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/layout_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hello">

        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:gravity="center_horizontal"
            android:text="Hanoi"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"></TextView>

        <TextView
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="194dp"
            android:layout_marginTop="41dp"
            android:text="20"
            android:textColor="@color/white"
            android:textSize="@dimen/_50sdp"></TextView>

        <TextView
            android:id="@+id/o"
            android:layout_below="@id/city"
            android:layout_toRightOf="@id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:fontFamily="@font/manrope_regular"
            android:text="o"></TextView>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/type"
            android:layout_below="@id/city"
            android:layout_toRightOf="@id/o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_25sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/manrope_bold"
            android:text="C"></TextView>

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/status"
            android:fontFamily="@font/manrope_regular"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_below="@id/degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"></TextView>

        <Button

            android:id="@+id/btn_see_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="139dp"
            android:textColor="@color/white"
            android:text="See Details"
            android:textAllCaps="false"></Button>
    </RelativeLayout>

    <ScrollView
        android:background="@color/white_grey"
        app:layout_constraintTop_toTopOf="@id/btn_see_details"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">
        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/manrope_regular"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"></TextView>

        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/manrope_regular"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"></TextView>

        <TextView
            android:gravity="center_horizontal"
            android:fontFamily="@font/manrope_regular"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partly Cloudy"></TextView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>